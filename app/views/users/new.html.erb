<header class="page-header">
<h1 id="header" class="header-sign-up">Sign Up</h1>
<header>

<%= form_for :user, url: '/users' do |f| %>
  <div class="container">
  <div class="row g-3">
  <div class="col-sm">
  Your Name: <%= f.text_field :name, :placeholder => "Name"%>
</div>

<div class="col-sm">
  Password: <%= f.password_field :password, :placeholder => "Password" %>
</div>
</div>

<div class="row g-3">
<div class="col-sm">
 Email: <%= f.text_field :email, :placeholder => "Email"%>
</div>

<div class="col-sm">
  Re-type password: <%= f.password_field :password_confirmation, :placeholder => "Password" %>
</div>
</div>
</div>

<div class="form-group">
  <%= f.submit "Submit" %>
  </div>
<% end %>